{
	"name": "Ubuntu",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-vscode.cpptools-extension-pack",
				"vadimcn.vscode-lldb"
				"ms-python.python",
				"ms-python.vscode-pylance"
			]
		}
	},
	"runArgs": [
		"--gpus", "all",
		"--net=host"
	],
	"postCreateCommand": "git -C ./src/OpenImageDebugger submodule update --init"
}
